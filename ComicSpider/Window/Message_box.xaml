<Window x:Class="ComicSpider.Message_box"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Message Box" Height="150" Width="260" Icon="/Comic%20Spider;component/Images/y.s.ico" WindowStartupLocation="CenterScreen" Topmost="True">
	<Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/Comic Spider;component/Images/main_bg.jpg" Stretch="UniformToFill" TileMode="None" />
	</Window.Background>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="78*" />
			<RowDefinition Height="36" />
		</Grid.RowDefinitions>
		<TextBox x:Name="txtMain" Margin="5" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14" />
		<StackPanel Margin="5" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Width="60" IsDefault="True" Click="Button_Click">OK</Button>
		</StackPanel>
	</Grid>
</Window>
