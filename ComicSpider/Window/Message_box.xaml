<Window x:Class="ComicSpider.Message_box"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Comic Spider" Height="150" Width="260" Icon="/Comic%20Spider;component/Images/y.s.ico" WindowStartupLocation="CenterScreen" Topmost="True">
	<Window.Background>
		<ImageBrush ImageSource="pack://siteoforigin:,,,/Asset/main_bg.png" Stretch="UniformToFill" TileMode="None" />
	</Window.Background>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="78*" />
			<RowDefinition Height="36" />
		</Grid.RowDefinitions>
		<TextBox x:Name="txtMain" Margin="5" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#62FFFFFF" BorderBrush="{x:Null}" FontSize="14" TextWrapping="Wrap" />
		<StackPanel Margin="5" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Width="60" Margin="5,0" IsDefault="True" Click="btn_ok_Click">OK</Button>
			<Button x:Name="btn_cancel" Width="60" Margin="5,0" IsCancel="True" Click="btn_cancel_Click">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
